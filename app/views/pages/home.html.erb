<% content_for :title, "Han" %>
<% if logged_in? %>
	<% content_for :links do %>
		You're logged in, so you might be interested in the <%= link_to "Overview", overview_path %>
		or <%= link_to "Logging out", sessions_destroy_path %>.
	<% end %>
<% end %>


<p class="padded-text">A personal tool for keeping track of my side projects</p>

<% unless logged_in? %>
	<%= render 'login_form' %>
<% end %>

<h2>Projects</h2>
<div>
	<% Project.all.each do |project| %>
		<%= render 'project_card', project: project %>
	<% end %>
</div>
